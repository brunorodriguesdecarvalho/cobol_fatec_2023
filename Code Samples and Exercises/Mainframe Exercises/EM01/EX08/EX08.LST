    23 PROCEDURE DIVISION.
    24
    25 INICIO.
    26
    27     DISPLAY ERASE.
    28     DISPLAY "VERIFICADOR DE TRIANGULOS" AT 0520.
    29
    30     DISPLAY "LADO 1: " AT 1010.
    31     ACCEPT L1 AT 1019.
    32
    33     DISPLAY "LADO 2: " AT 1110.
    34     ACCEPT L2 AT 1119.
    35
    36     DISPLAY "LADO 3: " AT 1210.
    37     ACCEPT L3 AT 1219.
    38
    39     IF (L1+L2)>L3 THEN
    40         IF (L1+L3)>L2 THEN
    41             IF (L2+L3)>L1 THEN
    42                 IF (L1 = L2) AND (L1 = L3) THEN
    43                    MOVE 'TRIANGULO EQUILATERO' TO FLAG
    44                 ELSE
    45                     IF (L1=L2) OR (L2=L3) OR (L1=L3) THEN
    46                         MOVE 'TRIANGULO ISOCELES' TO FLAG
    47                     ELSE
    48                         MOVE 'TRIANGULO ESCALENO' TO FLAG.
    49
    50
    51     DISPLAY "RESULTADO DO TESTE: " AT 1410 FLAG.
    52
    53     DISPLAY " " AT 1910.
    54
    55 STOP RUN.
